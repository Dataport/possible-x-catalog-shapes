@prefix gx: <https://registry.lab.gaia-x.eu/development/api/trusted-shape-registry/v1/shapes/jsonld/trustframework#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix vcard: <http://www.w3.org/2006/vcard/ns#> .

gx:legalRegistrationNumberShape
    a sh:NodeShape ;
    sh:targetClass gx:legalRegistrationNumber ;
    sh:message "At least one of vatID, EORI or leiCode must be defined." ;
    # taxID and EUID are NOT supported by Tagus Notary
    #sh:property
    #    [
    #        sh:path gx:taxID ;
    #        sh:maxCount 1 ;  # added by MERLOT
    #        sh:datatype xsd:string ;
    #        sh:minLength 3 ;
    #        sh:name "Steuernummer (taxID)" ;
    #        sh:order 3 ;
    #    ] ;
    #sh:property
    #    [
    #        sh:path gx:EUID ;
    #        sh:maxCount 1 ;  # added by MERLOT
    #        sh:datatype xsd:string ;
    #        sh:minLength 3 ;
    #        sh:name "EUID (EUID)" ;
    #        sh:order 1 ;
    #    ] ;
    sh:property
        [
            sh:path gx:EORI ;
            sh:maxCount 1 ;  # added by MERLOT
            sh:datatype xsd:string ;
            sh:minLength 3 ;
            sh:name "EORI (EORI)" ;
            sh:order 2 ;
        ] ;
    sh:property
        [
            sh:path gx:vatID ;
            sh:maxCount 1 ;  # added by MERLOT
            sh:datatype xsd:string ;
            sh:minLength 3 ;
            sh:name "Umsatzsteuer-Identifikationsnummer (vatID)" ;
            sh:order 4 ;
        ] ;
    sh:property
        [
            sh:path gx:leiCode ;
            sh:maxCount 1 ;  # added by MERLOT
            sh:datatype xsd:string ;
            sh:minLength 3 ;
            sh:name "LEI-Code (leiCode)" ;
            sh:order 0 ;
        ] ;
    sh:or
        (
            #[
            #    sh:path gx:taxID ;
            #    sh:minCount 1 ;
            #] [
            #      sh:path gx:EUID ;
            #      sh:minCount 1 ;
            #  ] 
            [
                    sh:path gx:EORI ;
                    sh:minCount 1 ;
                ] [
                      sh:path gx:vatID ;
                      sh:minCount 1 ;
                  ]
            [
                sh:path gx:leiCode ;
                sh:minCount 1 ;
            ]
        ) .