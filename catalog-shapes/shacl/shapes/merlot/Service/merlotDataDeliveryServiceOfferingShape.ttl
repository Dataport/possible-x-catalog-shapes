@prefix gx: <https://registry.lab.gaia-x.eu/development/api/trusted-shape-registry/v1/shapes/jsonld/trustframework#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix merlot: <http://w3id.org/gaia-x/merlot#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix vcard: <http://www.w3.org/2006/vcard/ns#> .

merlot:MerlotDataDeliveryServiceOfferingShape
    a sh:NodeShape ;
    sh:targetClass merlot:MerlotDataDeliveryServiceOffering ;
    sh:node merlot:MerlotServiceOfferingShape ;
    sh:property
        # merlot data delivery offering
        [ skos:example "'Push'" ;
            sh:datatype xsd:string ;
            sh:description "Art der Datenübertragung"@de,
                "Type of data transfer"@en ;
            sh:in ( "Push" "Pull" ) ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:name "Datentransferart" ;
            sh:order 102 ;
            sh:path merlot:dataTransferType 
        ],
        [ skos:example "'Download'" ;
            sh:datatype xsd:string ;
            sh:description "Datenzugriffsart"@de,
                "Data Access Type"@en ;
            sh:in ( "Download" ) ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:name "Datenzugriffsart" ;
            sh:order 103 ;
            sh:path merlot:dataAccessType 
        ],
        [   skos:example "'up to 5'" ;
            sh:description "Option für die zulässige Anzahl von Datenübertragungen"@de,
                "Option for allowed count of data exchanges"@en ;
            sh:name "Datenaustauschanzahl-Option" ;
            sh:node merlot:DataExchangeCountShape ;
            sh:minCount 1 ;
            sh:order 198 ;
            sh:path merlot:exchangeCountOption 
        ] .

# merlot data delivery offering
merlot:DataExchangeCountShape a sh:NodeShape ;
    sh:closed true ;
	sh:ignoredProperties ( rdf:type ) ;
    sh:property 
        [ skos:example "'5'" ;
            sh:datatype xsd:integer ;
            sh:minInclusive 0 ;
            sh:description "Maximal zulässige Anzahl an Datenaustauschen. Auf 0 setzen für 'unbegrenzt'."@de,
                "Number of data exchanges up to which the transfer is allowed. Set to 0 for 'unlimited'."@en ;
            sh:maxCount 1 ;
            sh:minCount 1 ;
            sh:name "Option für maximale Anzahl an Datenaustauschen" ;
            sh:order 1 ;
            sh:path merlot:exchangeCountUpTo ] ;
    sh:targetClass merlot:DataExchangeCount .
